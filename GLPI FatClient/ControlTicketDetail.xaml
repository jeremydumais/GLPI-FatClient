<UserControl x:Class="GLPI_FatClient.ControlTicketDetail"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GLPI_FatClient"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded" Initialized="UserControl_Initialized">
    <Grid>
        <Label Content="ID: " HorizontalAlignment="Left" Margin="21,29,0,0" VerticalAlignment="Top"/>
        <Label x:Name="labelID" Content="{Binding Id}" HorizontalAlignment="Left" Margin="84,29,0,0" VerticalAlignment="Top" Height="20" Width="50"/>
        <Label Content="Titre: " HorizontalAlignment="Left" Margin="21,59,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBoxName" Text="{Binding Name}" HorizontalAlignment="Left" Margin="84,59,0,0" VerticalAlignment="Top" Height="20" Width="700"/>
    </Grid>
</UserControl>
